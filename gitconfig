; vim: filetype=gitconfig

[user]
    name = avdd
    email = i@avdd.co

[core]
    pager = less -R

[push]
    default = simple

[color]
    ui = auto

; FG BG ATTR
; normal black red green yellow blue magenta cyan white
; bold dim ul blink reverse

[color "diff"]
    plain = normal
    meta = magenta
    frag = normal dim
    func = cyan dim
    old = red bold
    new = green bold
    commit = yellow
    whitespace = red white

[color "status"]

    ; the header text of the status message
    header = normal dim
    ; files which are added but not committed
    added = green bold
    ; files which are changed but not added in the index
    changed = blue bold
    ; files which are not tracked by Git
    untracked = magenta bold
    ; the current branch
    branch = green
    ; the color the no branch warning is shown in, defaulting to red
    nobranch = red

[alias]
    gl = log --graph --oneline --decorate --all
